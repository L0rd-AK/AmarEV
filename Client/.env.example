# Vite Environment Variables for Development
VITE_API_BASE_URL=http://localhost:5000/api
VITE_WEBSOCKET_URL=http://localhost:5000
VITE_APP_NAME=ChargeBD
VITE_APP_VERSION=1.0.0

# Map Configuration
VITE_DEFAULT_MAP_CENTER_LAT=23.8103
VITE_DEFAULT_MAP_CENTER_LNG=90.4125
VITE_DEFAULT_MAP_ZOOM=11

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false
VITE_ENABLE_DEBUG_MODE=true

# Payment Gateway URLs (for redirects)
VITE_PAYMENT_SUCCESS_URL=http://localhost:3000/payment/success
VITE_PAYMENT_FAILURE_URL=http://localhost:3000/payment/failure
VITE_PAYMENT_CANCEL_URL=http://localhost:3000/payment/cancel

# Social Login (if implemented)
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_FACEBOOK_APP_ID=your-facebook-app-id

# Analytics (if needed)
VITE_GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# CDN/Assets
VITE_ASSETS_BASE_URL=http://localhost:3000
VITE_UPLOAD_BASE_URL=http://localhost:5000/uploads