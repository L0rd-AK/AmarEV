{
  "name": "charge-bd",
  "version": "1.0.0",
  "description": "EV Charger Locator and Reservation Portal for Bangladesh",
  "private": true,
  "workspaces": [
    "Client",
    "Server",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=Server\" \"npm run dev --workspace=Client\"",
    "build": "npm run build --workspace=Server && npm run build --workspace=Client",
    "test": "npm run test --workspace=Server && npm run test --workspace=Client",
    "test:e2e": "npm run test:e2e --workspace=Client",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\"",
    "prepare": "husky install",
    "seed": "npm run seed --workspace=Server"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "ev-charging",
    "electric-vehicle",
    "bangladesh",
    "mern",
    "react",
    "node",
    "mongodb",
    "redis"
  ],
  "author": "ChargeBD Team",
  "license": "MIT"
}